{
  "manifest_version": 3,
  "name": "Prayer.time",
  "version": "1.0.0",
  "description": "Lightweight, privacy-focused prayer times and Ramadan tracker with Athan countdowns and Salah, Suhoor, and Iftar alerts.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications"]
}
